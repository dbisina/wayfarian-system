{
  "expo": {
    "name": "Wayfarian Adventures",
    "slug": "wayfarian",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/adaptive-icon.png",
    "description": "Wayfarian is your group journey companion. Track, share, and relive your adventures with friends.",
    "scheme": "app",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-web-browser",
      "expo-secure-store",
      "@react-native-google-signin/google-signin",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you set your profile picture and share moments."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Wayfarian to use your location to track your journey and show your position on the map."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Wayfarian to access your photos to save and share journey memories.",
          "savePhotosPermission": "Allow Wayfarian to save photos to your device."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to track your journey and show your position on the map.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses location to track your journey and show your position on the map."
      },
      "bundleIdentifier": "com.wayfarian.wayfarianadventures",
      "googleServicesFile": "./GoogleService-Info.plist",
      "config": {},
      "icon": {
        "light": "./assets/icons/ios-light.png",
        "dark": "./assets/icons/ios-dark.png"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff",
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "monochromeImage": "./assets/icons/adaptive-icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "CAMERA"
      ],
      "package": "com.wayfarian.com",
      "versionCode": 1,
      "googleServicesFile": "./google-services.json",
      "config": {}
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "primaryColor": "#2196F3",
    "backgroundColor": "#ffffff",
    "platforms": [
      "android",
      "ios",
      "web"
    ],
    "androidStatusBar": {
      "barStyle": "dark-content",
      "backgroundColor": "#ffffff"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "dc73caab-30e7-459f-8cd5-d62b3c6e6fc6"
      }
    },
    "owner": "deusx"
  }
}
