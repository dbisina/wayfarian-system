{
  "name": "wayfarian-server",
  "version": "1.0.0",
  "description": "Backend API for Wayfarian App - Journey-focused travel tracking with real-time features",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "logs:clean": "rm -rf logs/*.log",
    "cache:clear": "node -e \"require('./services/CacheService').cacheService.clear(); console.log('Cache cleared');\"",
    "health:check": "curl http://localhost:3001/health",
    "build": "echo 'No build step required for Node.js'",
    "prestart": "npm run db:generate"
  },
  "keywords": [
    "travel",
    "journey",
    "gps",
    "tracking",
    "express",
    "socket.io",
    "firebase",
    "real-time",
    "maps",
    "leaderboard",
    "mobile"
  ],
  "author": "DeusX",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.9.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "socket.io": "^4.7.5",
    "firebase-admin": "^12.0.0",
    "firebase": "^10.8.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.4.5",
    "bcryptjs": "^2.4.3",
    "multer": "^2.0.0",
    "sharp": "^0.33.2",
    "uuid": "^9.0.1",
    "axios": "^1.6.7",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "prisma": "^5.9.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.3",
    "eslint": "^9.0.0",
    "@eslint/config-array": "^0.15.0",
    "@eslint/object-schema": "^2.1.3",
    "@types/node": "^20.11.17",
    "rimraf": "^5.0.5",
    "glob": "^10.3.10",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/sharp": "^0.32.0",
    "@types/uuid": "^9.0.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dbisina/wayfarian-server.git"
  },
  "bugs": {
    "url": "https://github.com/dbisina/wayfarian-server/issues"
  },
  "homepage": "https://github.com/dbisina/wayfarian-server#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**",
      "!prisma/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}